{
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["node", "jest"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
 "paths": {
      "@entities/*": ["./src/entities/*"],
      "@shared/*": ["./src/shared/*"],
      "@src/*": ["./*"],
      "@~/*": ["./"]
    },
    "moduleResolution": "node"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "plugins": [
    {
      "name": "typescript-plugin-css-modules"
    }
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts",
    "./node_modules/@tanstack",
    "node_modules/@tanstack/query-core/src/*",
    "./node_modules/@tanstack/query-core/src/*",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "**/*.stories.ts",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "**/*.stories.tsx",
  ]
}
